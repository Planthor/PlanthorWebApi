# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use 4 spaces as indentation
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = true

# Dotnet files settings (.cs, .csx, .vb, .vbx, .fs, .fsx)
[*.{cs,csx,vb,vbx,fs,fsx}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# YAML files settings
[*.yml, *.yaml]
indent_size = 2
end_of_line = lf

# HTML, CSS, SCSS and JS files settings
[*.{html,css,scss,js,Dockerfile,json,sh,csproj,props}]
indent_style = space
end_of_line = lf
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
